#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char *argv[]) {
  char *line = NULL;
  size_t len = 0;
  ssize_t nread = getline(&line, &len, stdin);

  if (nread == -1) {
    perror("getline failed");
    exit(EXIT_FAILURE);
  }

  while (nread != -1){
    printf("Line %zd:\n", nread);
  }
  free(line);
}
